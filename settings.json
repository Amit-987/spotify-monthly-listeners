def load_input(path: Optional[str] = None) -> Dict[str, Any]:
    """
    Load input configuration from an explicit path or fall back to
    configs/input.json and configs/input.example.json.
    """
    if path:
        p = Path(path)
        if not p.is_file():
            raise FileNotFoundError(f"Input file not found: {p}")
        logger.info("Loading input from %s", p)
        return _load_json(p)

    configs_dir = BASE_DIR / "configs"
    for name in ("input.json", "input.example.json"):
        candidate = configs_dir / name
